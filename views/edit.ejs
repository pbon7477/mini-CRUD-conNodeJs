<!--  aqui va el condcional-->

<% if(user){  %>

      <div class="container mt-4">     
        <div class="card border-secondary">
            <div class="card-header">Editar registro</div>
            <div class="card-body">

                <form action="/update" method="POST">
                    <!--input invisible capturador de id-->
                    <input id="id" name="id" value="<%= user.id %> " hidden>
                    <div class="mb-3">
                        <label for="user" class="form-label">Usuario</label>
                          <input type="text" class="form-control" id="user" name="user"  value="<%= user.user %>" tabindex="1">
                    </div>

                    <div class="mb-3">
                        <label for="rol" class="form-label">Rol</label>
                          <select id="rol" name="rol" class="form-select"  tabindex="2" >
                              <option <%= user.rol == 'admin' ? "selected" : "" %> value="Admin" >Admin</option>
                              <option <%= user.rol == 'data entry' ? "selected" : "" %> value="Data entry" >Data Entry</option>
                              <option <%= user.rol == 'funcionario' ? "selected" : "" %> value="Funcionario" >Funcionario</option>
                              <option <%= user.rol == 'externo' ? "selected" : "" %> value="Externo" >Externo</option>
                              <option <%= user.rol == 'embajador' ? "selected" : "" %> value="Embajador" >Embajador</option>
                       
                          </select>
                    </div>

                    <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>    
        </div>
      </div>

      <% } %>
 

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
